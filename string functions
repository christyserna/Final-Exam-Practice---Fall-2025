--------------------------

char s[100];
scanf("%[a-z]", s);

scanf("%[^,]", s);// reads until a comma

scanf("%[^\n], s);//reads until a newline


----------------------------------------------------

#include <stdio.h>

int main() {

char str[] = "Code"; //declares and initializes a string

printf("%c", str[0]); // accesses the first char of the string

printf("The string is: %s\n", str); //prints the string

str[0] = 'R';        //updates the first char
printf("%c", str[0]);

return 0;
}



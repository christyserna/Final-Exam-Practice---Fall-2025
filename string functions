// string declaration


char name[10]; // as a char array

char *name; // as a pointer


//string initialization

char name[] = {'C', 'O', 'D', 'I', 'N', 'G', '\0'}; //indi with newline
char name[10] = {'C', 'O', 'D', 'I', 'N', 'G', '\0'};

char name[] = "CODING"; // togethe without newline
char name[10] = "CODNIG";






























#include <stdio.h>

int main() {

int i;
double number;
double sum = 0.0;

for (i = 1; i <= 10; i++ {
  printf("enter a n %d: ", i);          //program calculates the sun of numbers (10 max) if a user enters a neg, its not added to result
  scanf("%lf", &number);


  if (number < 0.0) {
    continue;
  }

  sum += number;
}
  printf ("Sum = %.21lf", sum);

return 0;
}



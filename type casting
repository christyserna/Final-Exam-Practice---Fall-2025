//implicit type casting

#include <stdio.h>

int main() {

int a = 15;
int b = 2;

float div; 

div = a / b;       //(float) a / b

printf("the result is %f", div);

return 0;
}

-------------------------------------------------

//explicit type casting

#include <stdio.h>

int main() {

int a = 15;
int b = 2;
char x = 'a';

double div;

div = (double)a / b; /explicit

x = x + 3; //converting x implicitly to a+3

printf("implicit typecasting %c", x);
printf("explicit typecasting %f", div);

return 0; 
}

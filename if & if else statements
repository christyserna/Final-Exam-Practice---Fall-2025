// if statement

#include <stdio.h>

#int main() {

int phys = 50
int maths = 50;
float avg;

avg = (float)(phys + maths)/2;
printf("Phy: %d Maths: %d Avg: %f\n", phys, maths, avg);

if (avg >= 50 && (maths >= 35 && phys >= 35)) {
  printf("Result: PASS!");

if (avg <50) {
  printf("Result: FAILED.");
}

return 0;
}

----------------------------------

//if else

#include <stdio.h>

int main() {

int income = 5000;
float tax;
printf("income: %d'n", income);

if (income < 10000) {
tax = (float)(income * 10 / 100);
printf("tax: %f\n", tax);
}

else {
tax = (float)(1000 + (income-10000) * 15 / 100);
printf("tax: 5f", tax);
}

return 0;
}
